package repeticao;

import javax.swing.JOptionPane;

public class DesafioDo {

	public static void main(String[] args) {
		int num1 = 0;
		int num2 = 0;
		int tentativas = 0;
		do {
			num1 = Integer.parseInt(JOptionPane.showInputDialog("numero 1"));
			num2 = Integer.parseInt(JOptionPane.showInputDialog("numero 2"));
			if (num1>num2) {
				System.out.println("numero a acertar é maior");
			} if (num2>num1) {
				System.out.println("numero a acertar é menor");
			}
			tentativas = tentativas + 1;			
		}while (num1!=num2);
		
		System.out.println("acertou...numero de tentativas:" + tentativas);
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
