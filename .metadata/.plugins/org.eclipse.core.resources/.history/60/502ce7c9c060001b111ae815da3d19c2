package decisao;

import javax.swing.JOptionPane;

public class DesafioDecisaoEncadeada {

	public static void main(String[] args) {

		String nome = JOptionPane.showInputDialog("Nome da cidade").toUpperCase();
		short populacao = Short.parseShort(JOptionPane.showInputDialog("Populacao:"));
		short idh = Short.parseShort(JOptionPane.showInputDialog("IDH:"));
		if (populacao<200000) {
			if (idh > 0.85) {
				System.out.println(nome + " é uma Boa cidade");
			}
				else
				 { System.out.println(nome +" é uma Cidade Precisa de cuidados");
				}	
			}
		 else {
				if (idh > 0.9) {
					System.out.println(nome + " é uma cidade perfeita");
				}
					if (idh > 0.75 && idh <0.9)
					 { System.out.println(nome +" é uma boa cidade");
					 }
					 else {
						 System.out.println(nome +" é uma Cidade Precisa de cuidados");
					}	
				}


		}

	}


