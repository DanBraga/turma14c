		int mes = Integer.parseInt(JOptionPane.showInputDialog("informe o mês"));
			while (mes > 12) {
				Integer.parseInt("informe mês valido");
			}
		int dia = Integer.parseInt("informe o dia");
			while (dia > 31 || mes==2 && dia>29) {
				Integer.parseInt("informe dia valido");	

		int ano = Integer.parseInt("informe o ano");
			while (ano>2003) {
				Integer.parseInt("informe dia valido");	
		
		String data = JOptionPane.showInputDialog("data: " +dia +"/"+ mes + "/" + ano).toLowerCase();
		
		

	}
			}
	}}
